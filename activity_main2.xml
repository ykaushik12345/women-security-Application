<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_Marks"
        android:layout_alignLeft="@+id/editText_Marks"
        android:layout_alignStart="@+id/editText_Marks"
        android:layout_marginBottom="44dp"
        android:hint="Person Name"
        android:inputType="textCapCharacters"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText_Marks"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:hint="Contact No."
        android:inputType="phone"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="112dp"
        android:background="@android:color/black"
        android:text="Add contact"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"/>

    <Button
        android:id="@+id/button_viewAll"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:text="View Contact"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/button_add"
        android:layout_alignBottom="@+id/button_add"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"/>

    <Button
        android:id="@+id/button_update"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:text="Edit contact"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/button_delete"
        android:layout_alignBottom="@+id/button_delete"
        android:layout_alignLeft="@+id/button_add"
        android:layout_alignStart="@+id/button_add"/>


    <Button
        android:id="@+id/button_delete"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:text="Delete contact"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/button_viewAll"
        android:layout_alignLeft="@+id/button_viewAll"
        android:layout_alignStart="@+id/button_viewAll"/>

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_add"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:hint="Person No."
        android:inputType="number" />

</RelativeLayout>
